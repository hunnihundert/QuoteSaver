<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#FFFF00"
        android:clipToPadding="false"
        android:padding="6dp">
        <TextView
            android:id="@+id/textView_listItemQuote_quote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="Weather you think you can or you cannot, you are always right."
            tools:textSize="32sp" />
        <ImageView
            android:id="@+id/imageView_listItemQuote_liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_border"
            android:contentDescription="@string/contentDescription_imageView_listItemQuote_favorite"
            android:layout_gravity="bottom|end"/>
        <ImageView
            android:id="@+id/imageView_listItemQuote_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"
            android:contentDescription="@string/contentDescription_imageView_listItemQuote_share"
            android:layout_gravity="bottom|start"/>

    </androidx.cardview.widget.CardView>
</layout>